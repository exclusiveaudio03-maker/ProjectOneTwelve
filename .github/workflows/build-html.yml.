name: Build HTML5 Export

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  export:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v3

    - name: Download and Setup Godot
      uses: firebelley/godot-export@v5
      with:
        godot-version: "4.2.2"
        export-preset: "HTML5"
        cache: true

    - name: Export HTML5
      uses: firebelley/godot-export@v5
      with:
        godot-version: "4.2.2"
        export-preset: "HTML5"
        output-path: "build/html5/"

    - name: Upload Exported Game
      uses: actions/upload-artifact@v3
      with:
        name: html5-build
        path: build/html5
